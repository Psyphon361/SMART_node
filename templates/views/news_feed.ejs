<%- include("../layouts/header.ejs") %>

  <!--Main layout-->
  <div class="container pt-5">
    <!--Section: News of the day-->
    <section class="pb-4 mb-5">

      <% for (let i = 0; i < 25; ++i) { %>
        <div class="row gx-5 py-3">
          <div class="col-md-6 mb-4 my-auto">
            <div class="bg-image hover-overlay ripple shadow-2-strong rounded-5" data-mdb-ripple-color="light">
              <img style="border-radius: 10px;" width="75%" src="<%= news_list[i].urlToImage %>"
                class="img-fluid" />
          
            </div>
          </div>

          <div class="col-md-6 mb-4 my-auto">
            <span class="badge bg-danger px-2 py-1 shadow-1-strong mb-3">
              <%= topic %>
            </span>
            <h4><strong>
                <%= news_list[i].title %>
              </strong></h4>
            <p style="text-align: justify;" class="text-muted">
              <%= news_list[i].description %>
            </p>


            <a type="button" href="<%= news_list[i].url %>" class="btn read-more">Read more</a>
          </div>
        </div>

    
        <% } %>
    </section>
    <!--Section: News of the day-->
  </div>




  <%- include("../layouts/footer.ejs") %>